# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lma_loans
DB_USER=lma_user
DB_PASSWORD=change_this_secure_password_in_production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# JWT
JWT_SECRET=change_this_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# RabbitMQ
RABBITMQ_URL=amqp://rabbitmq:5672
RABBITMQ_USER=lma_user
RABBITMQ_PASSWORD=change_this_rabbitmq_password

# External APIs (Add your API keys)
KYC_API_KEY=your_kyc_api_key
KYC_API_URL=https://api.kyc-provider.com

CREDIT_BUREAU_API_KEY=your_credit_bureau_api_key
CREDIT_BUREAU_API_URL=https://api.creditbureau.com

MARKET_DATA_API_KEY=your_market_data_api_key
MARKET_DATA_API_URL=https://api.marketdata.com

DOCUSIGN_API_KEY=your_docusign_integration_key
DOCUSIGN_API_URL=https://demo.docusign.net/restapi

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@lmaplatform.com

# AWS S3 (for document storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=lma-documents

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
